{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "esnext.asynciterable"],
    "target": "Es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "outDir": "./bin",
    "removeComments": false,
    "esModuleInterop": true,
    "typeRoots": ["src/@polyfills"]
  },
  "include": ["src/**/*.ts"]
}
